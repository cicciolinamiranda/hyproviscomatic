<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/black"
android:orientation="vertical"
tools:context=".LandingActivity">

    <!-- Login progress -->
    <RelativeLayout
        android:id="@+id/login_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:background="@null"
        android:alpha="0.4"
        android:visibility="gone">
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_login_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.40"
        android:background="@color/black"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/app_logo"
            android:adjustViewBounds="true"
            />
        <!--<ImageView-->
        <!--android:id="@+id/google_icon"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight=".50"-->
        <!--android:scaleType="fitCenter"-->
        <!--android:layout_marginTop="@dimen/g_top_margin"-->
        <!--android:src="@drawable/app_logo" />-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:background="@color/black"
        android:padding="3dp">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_alignParentStart="true"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp">
                <TextView
                    android:id="@+id/tv_resellers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_reseller"
                    android:background="@drawable/rounded_corners_orange"
                    android:gravity="bottom|center_horizontal"
                    android:textColor="@color/light"
                    android:textSize="14sp"/>
            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp">
            <TextView
                android:id="@+id/tv_distributor_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_products"
                android:background="@drawable/rounded_corners_orange"
                android:gravity="bottom|center_horizontal"
                android:textColor="@color/light"
                android:textSize="14sp"/>
            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:textColorHint="#fff"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/email"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_orange"
                    android:theme="@style/LandingEditText"
                    android:hint="@string/prompt_email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"/>
            </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:textColorHint="#fff"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/password"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:hint="@string/prompt_password"
                    android:textColor="@color/material_orange"
                    android:theme="@style/LandingEditText"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:singleLine="true"/>

            </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="@string/action_sign_in_short"
                    android:id="@+id/email_sign_in_button"
                    android:background="@drawable/rounded_corners_primary"
                    style="@style/Widget.AppCompat.Button.Colored" />
            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp">
            <TextView
                android:id="@+id/tv_create_new_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_register"
                android:gravity="bottom|center_horizontal"
                android:textColor="@color/light"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp">
            </LinearLayout>
            <!--<TextView-->
                <!--android:id="@+id/tv_distributor_shop"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@string/action_shops"-->
                <!--android:gravity="bottom|center_horizontal"-->
                <!--android:textColor="@color/light"-->
                <!--android:textSize="14sp"/>-->
            </LinearLayout>
        </RelativeLayout>
</LinearLayout>



