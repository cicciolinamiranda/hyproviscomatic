<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <!--Mode of payment options-->
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_mode_of_payment_options"
            android:layout_gravity="center_vertical"
            android:background="@color/icon_reg_bg_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_mode_of_payment"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/asset_shop_open"
                android:background="@color/icon_reg_bg_color" />


                <Spinner
                    android:id="@+id/mode_of_payment_spinner"
                    style="@style/Label.Spinner"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp" />

        </LinearLayout>

        <TextView
            android:layout_marginBottom="5dp"
            android:id="@+id/tv_max_of_two_pic_proof_of_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/edittext_reg_color"
            android:text="@string/max_of_two_photos_only"
            android:visibility="gone"
            android:layout_gravity="center_vertical"/>

        <!--<LinearLayout-->
            <!--android:layout_marginBottom="5dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/ll_proof_of_payment_picture"-->
            <!--android:orientation="horizontal">-->

            <LinearLayout
                android:id="@+id/ll_btn_proof_of_payment_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|start">


                <ImageView
                    android:id="@+id/iv_btn_proof_of_payment_picture_camera"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/asset_camera"
                    android:background="@color/icon_reg_bg_color" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:id="@+id/btn_proof_of_payment_picture_camera"
                    android:background="@color/icon_reg_bg_color"
                    android:textColor="@color/edittext_reg_color"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:text="@string/action_add_branch_photo"/>

            </LinearLayout>

        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|start"
            android:id="@+id/ll_proof_of_payment_picture_images">
            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:id="@+id/iv_cam_proof_of_payment_3"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:id="@+id/iv_cam_proof_of_payment_2"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:id="@+id/iv_cam_proof_of_payment_1"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:id="@+id/iv_cam_proof_of_payment_0"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
            <LinearLayout
                android:id="@+id/ll_photo_proof_of_payment_imageExcessDisplay"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/border_rectangle"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_proof_of_payment_imageExcessCount"
                    android:background="@color/black_highlight"
                    android:textColor="@color/light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+10"/>
            </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>
</ScrollView>
