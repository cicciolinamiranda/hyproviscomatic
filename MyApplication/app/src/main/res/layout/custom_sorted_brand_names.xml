<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_item_brand_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <!--Brand Name-->
        <LinearLayout
            android:id="@+id/ll_brand_name_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_gravity="center_vertical">

            <!--Brand Name title-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:id="@+id/ll_brand_name_title"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_brand_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="21dp"
                    android:text="Brand Name"/>

            </LinearLayout>

        </LinearLayout>

        <!--Arrow Right-->
        <LinearLayout
            android:id="@+id/ll_brand_name_arrow_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical|right"-->
                <!--android:id="@+id/ll_brand_name_arrow_right_inner"-->
                <!--android:orientation="horizontal">-->
               <ImageView
                   android:id="@+id/ib_brand_name_arrow_right"
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:background="@null"
                   android:src="@drawable/ic_chevron_right_white_24dp"
                   android:scaleType="centerInside" />
            <!--</LinearLayout>-->
        </LinearLayout>

    </LinearLayout>
</GridLayout>