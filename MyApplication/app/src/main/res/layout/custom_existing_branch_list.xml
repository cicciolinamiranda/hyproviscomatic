<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_item_existing_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp">
        <ImageButton
            android:id="@+id/iv_existing_branch_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@null"
            android:tint="@android:color/white"
            android:src="@drawable/ic_store_black_48dp"
            android:scaleType="centerInside"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:id="@+id/ll_existing_branch_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_gravity="center_vertical">

            <!--Branch name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:id="@+id/ll_branch_name"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_existing_branch_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="Name: "/>

                <TextView
                    android:id="@+id/tv_existing_branch_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="Sample Branch Name"/>
            </LinearLayout>

            <!--Branch Address-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:id="@+id/ll_branch_address"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_existing_branch_address_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="Address: "/>
                <TextView
                    android:id="@+id/tv_existing_branch_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="address" />
            </LinearLayout>

            <!--Branch Contact num-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:id="@+id/ll_existing_branch_contact_num"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_existing_branch_contact_num_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="Contact Number: "/>
                <TextView
                    android:id="@+id/tv_existing_branch_contact_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="1231231313" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</GridLayout>