<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_item_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
    <!--Order Details-->
        <LinearLayout
            android:id="@+id/ll_order_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_gravity="center_vertical">

            <!--Order number-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:id="@+id/ll_order_msg_title"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_order_number_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="@string/order_number_label"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_yellow"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="1322132144"/>
            </LinearLayout>

            <!--Order Amount-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:id="@+id/ll_order_msg_amount"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_order_amount_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="@string/label_order_amount"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/tv_order_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="0 Php"/>
            </LinearLayout>

            <!--Order Amount-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:id="@+id/ll_order_msg_discount"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_order_discount_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="@string/label_order_discount"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/tv_order_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="0 Php"/>
            </LinearLayout>

            <!--Order date-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:id="@+id/ll_order_msg_date"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    android:text="date" />
            </LinearLayout>
        </LinearLayout>

    <!--Order Status-->
    <LinearLayout
        android:id="@+id/ll_order_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/ll_order_status_inner"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:gravity="right"
                    android:textSize="13sp"
                    android:text="Closed"/>
            </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</GridLayout>