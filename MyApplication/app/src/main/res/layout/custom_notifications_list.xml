<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_item_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp">
        <!--<ImageButton-->
            <!--android:id="@+id/iv_notifications_mail_icon"-->
            <!--android:layout_width="60dp"-->
            <!--android:layout_height="60dp"-->
            <!--android:background="@drawable/btn_ripple_accent"-->
            <!--android:src="@android:drawable/ic_dialog_email"-->
            <!--android:scaleType="centerInside"-->
            <!--android:layout_marginRight="10dp" />-->

        <LinearLayout
            android:id="@+id/ll_notification_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_gravity="center_vertical">

            <!--Msg title-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:id="@+id/ll_notification_msg_title"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_notification_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:text="Sample Title"/>
                </LinearLayout>

            <!--Msg content-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:id="@+id/ll_notification_msg_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_notification_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:text="content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</GridLayout>